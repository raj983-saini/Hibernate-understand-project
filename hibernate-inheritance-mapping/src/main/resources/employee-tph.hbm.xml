<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.example.model.Employee" table="employee" discriminator-value="emp">
        <id name="id">
            <generator class="increment"></generator>
        </id>

        <discriminator column="type" type="string"></discriminator>
        <property name="name"></property>

        <subclass name="org.example.model.Regular_Employee" discriminator-value="reg_emp">
            <property name="salary"></property>
            <property name="bonus"></property>
        </subclass>

        <subclass name="org.example.model.Contract_Employee" discriminator-value="con_emp">
            <property name="pay_per_hour"></property>
            <property name="contract_duration"></property>
        </subclass>

    </class>

</hibernate-mapping>